@model CSharp_MVC.CarInfo.BMW

@{
    ViewData["Title"] = "BMW Info"; 
}
<div class="row">
    <div class="card col col-md-3">
        <div class="card-body row">
            <div class="col-4">
                <form asp-controller="Home" asp-action="BMWInfo" method="post">
                    <input hidden name="FuelLevel" value="@Model.FuelLevel" />
                    <div class="form-group">
                        <label asp-for="@Model.Color"></label>
                        <input asp-for="@Model.Color" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Year"></label>
                        <input asp-for="@Model.Year" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Make"></label>
                        <input asp-for="@Model.Make" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Passengers"></label>
                        <input asp-for="@Model.Passengers" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Speed"></label>

                        <input name="Speed" id="carSpeed" value="@Model.Speed" />
                    </div>
                    <hr />
                    <input class="btn btn-sm btn-outline-success" type="submit" name="move" value="Faster" />
                    <input class="btn btn-sm btn-outline-danger" type="submit" name="move" value="Slower" />
                    <input class="btn btn-sm btn-danger" type="submit" name="move" value="Power" />
                </form>
                <button class="btn btn-sm btn-warning" onclick="checkFuel()">Check Fuel</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function checkFuel(){
            alert(@Model.FuelLevel);
        }
    </script>
}
